{
	"$schema": "node_modules/wrangler/config-schema.json",
	"name": "smokescan",
	"main": "./src/worker/index.ts",
	"compatibility_date": "2025-10-08",
	"compatibility_flags": ["nodejs_compat"],
	"observability": {
		"enabled": true,
		"head_sampling_rate": 1,
		"logs": {
			"enabled": true,
			"head_sampling_rate": 1,
			"persist": true,
			"invocation_logs": true
		},
		"traces": {
			"enabled": true,
			"persist": true,
			"head_sampling_rate": 1
		}
	},
	"upload_source_maps": true,
	"assets": {
		"directory": "./dist/client",
		"not_found_handling": "single-page-application"
	},
	"kv_namespaces": [
		{
			"binding": "SMOKESCAN_SESSIONS",
			"id": "5478507747724cdfa65d953d1b3236f7"
		}
	],
	"d1_databases": [
		{
			"binding": "SMOKESCAN_DB",
			"database_name": "smokescan-db",
			"database_id": "ab6e2ef1-e6d4-47ce-b8d8-9300614e80e0"
		}
	],
	"r2_buckets": [
		{
			"binding": "SMOKESCAN_IMAGES",
			"bucket_name": "smokescan-images"
		},
		{
			"binding": "SMOKESCAN_REPORTS",
			"bucket_name": "smokescan-reports"
		}
	],
	"ai": {
		"binding": "AI"
	}
}
